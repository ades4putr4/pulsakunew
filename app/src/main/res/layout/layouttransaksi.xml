<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/txt1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="harga"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txt1"
        android:id="@+id/txt2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----------"
        android:id="@+id/txttr1"
        android:layout_alignTop="@+id/txt1"
        android:layout_alignLeft="@+id/txttr2"
        android:layout_alignStart="@+id/txttr2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----------"
        android:id="@+id/txttr2"
        android:layout_alignBottom="@+id/txt2"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jumlah Barang"
        android:id="@+id/edtjumlah"
        android:layout_below="@+id/txttr2"
        android:layout_toRightOf="@+id/txt2"
        android:layout_toEndOf="@+id/txt2" />

</RelativeLayout>
